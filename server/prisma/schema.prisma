// schema.prisma

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  username String   @unique
  password String
  name     String?
  email    String   @unique
  avatar   String?  @default("/public/images/blankAvatar.webp") // Default avatar image path
}

model PasswordReset {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  token     String   @unique
  expiresAt DateTime
}

model WorkoutEvent {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  workout   String   // Name of the workout
  date      DateTime // Date of the workout event
  createdAt DateTime @default(now()) // Timestamp of when the workout event was created
}