---
import Layout from "../layouts/Layout.astro"

---

<Layout>
    <div class="container">
        <h1>Sign Up</h1>
        <form id="signupForm">
            <div>
                <label for="name">Name</label>
                <input type="text" id="name" name="name" />
            </div>

            <div>
                <label for="username">Username</label>
                <input type="text" id="username" name="username" />
            </div>

            <div>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" />
            </div>

            <div>
                <button type="button" id="signup"">Sign Up</button>
            </div>
        </form>
    </div>

    <style>
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 80vh;
            background-color: rgba(199, 180, 180, 0.1);
            width: 100%;
            margin-top: 50px;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
            width: 100%;
        }

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 12px 12px rgba(0, 0, 0, 0.5);
            width: 100%;
            max-width: 400px; /* Adjust the max-width as needed */
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #333;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            width: 100%;
            padding: 12px;
            background-color: #f9a825;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #986717;
        }
    </style>

   <script>
    
   </script>
</Layout>
